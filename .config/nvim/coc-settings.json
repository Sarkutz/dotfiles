{
	"coc.preferences.hoverTarget":  "preview",

	"suggest.autoTrigger": "trigger",
	// "suggest.virtualText": true,
	"signature.target": "echo",
	"diagnostic.messageTarget": "echo",
	// "diagnostic.messageTarget": "float",
	"diagnostic.virtualText": true,
	"codeLens.enable": true,

	// ltex (English Grammar)
	// Enable for rst filetype
	"ltex.enabled": true,
	// "ltex.enabled": [
	// 	"bibtex",
	// 	"context",
	// 	"context.tex",
	// 	"html",
	// 	"latex",
	// 	"markdown",
	// 	"org",
	// 	// "restructuredtext",
	// 	"rst",
	// 	"rsweave"
	// ],
	"ltex.language": "en-GB",
	"ltex.completionEnabled": true,
	// Point to the right Java SDK.
	"ltex.java.path": "~/.config/coc/extensions/node_modules/coc-ltex/lib/ltex-ls-15.2.0/jdk-11.0.12+7",

	// reStructuredText (rst) Sphinx
	"esbonio.enable": false,

	// Python
	"jedi.diagnostics.didChange": false,
	"jedi.startupMessage": false,

	// Scala
	"metals.enable": false,

	// Docker
	"docker.enable": true,

	"languageserver": {
		"bash": {
			"command": "bash-language-server",
			"args": ["start"],
			"filetypes": ["sh"],
			"ignoredRootPaths": ["~"]
		},

		"ccls": {
			"command": "ccls",
			"args": ["--log-file=/tmp/ccls.log", "-v=1"],
			"filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
			"rootPatterns": [".ccls", "compile_commands.json"],
			"initializationOptions": { 
				"cache": {
					"directory": "/tmp/ccls"
				},
				"client": {
					"snippetSupport": true
				}
			}
		}

		/*
		, "golang": {
			"command": "gopls",
			"rootPatterns": ["go.mod"],
			"filetypes": ["go"]
		}
		*/
	},

	/*
	"go.goplsOptions": {
		"staticcheck": true
	},
	*/

	"diagnostic-languageserver.filetypes": {
		"python": "pylint"
	},
	"diagnostic-languageserver.formatFiletypes": {
		"python": ["black", "autopep8", "isort"]
	}
}
